{
  "manifest_version": 3,
  "name": "Linguix Chrome Extension",
  "description": "linguix-extension-js as test case",
  "version": "1.00",
  "author": "linkovanne",
  "background": {
    "service_worker": "extension.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline'"
  },
  "action": {},
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["<all_urls>"],
      "css": [
        "/src/css/checkbox.css",
        "/src/css/style.css"
      ]
    }
  ]
}
